<div class="cardous2">
  <div class="d-flex justify-content-between align-items-center">
    <a class="btn btn-primary" href="/admin/create" role="button">
      <i class="bi-plus-lg"></i> Create New User
    </a>
  </div>
  
  <div class="table-responsive mt-3">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% usergames.forEach((usergame, index) => { %>
          <th scope="row"><%= index + 1 %></th>
          <td class="w-100"><%= usergame.username %></td>
          <td><%= usergame.email %></td>
          <td>
            <div class="d-flex gap-2 text-nowrap">
              <a class="btn btn-success btn-sm" href="/admin/<%= usergame.id %>" role="button">
                <i class="bi-eye-fill"></i> Lihat Detail
              </a>
  
              <a class="btn btn-primary btn-sm" href="/admin/<%= usergame.id %>/edit" role="button">
                <i class="bi-pencil-fill"></i> Edit
              </a>
  
              <form action="/admin/<%= usergame.id %>?_method=DELETE" method="post">
                <button class="btn btn-danger btn-sm" type="submit">
                  <i class="bi-trash-fill"></i> Hapus
                </button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
        <tr>
      </tbody>
    </table>
  </div>
</div>
